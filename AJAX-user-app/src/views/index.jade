doctype html
html
  head
   title Ajax users App
   link(rel='stylesheet', href='/css.css', type='text/css' )
  body
    h2 AJAX users App
    a(href='users/searchresult') Show all users
    br
    a(href='newuser') Add new user
    br
    a(href='users/search') Search for users
    each person in people
     ul
      li firstName: #{person.firstname}
      li lastName: #{person.lastname}
      li email: #{person.email}